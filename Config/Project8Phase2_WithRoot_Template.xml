        <integrator_rk8/>
        <term_propagation/>
        <term_synchrotron/>
        <control_cyclotron name="control_cyclotron_1_16" fraction="{1. / 32.}"/>
    </kstraj_trajectory_exact>

    <kstraj_trajectory_adiabatic name="traj_adiabatic">
        <integrator_rk8/>
        <term_propagation/>
        <term_gyration/>  
        <term_drift/>
        <control_cyclotron name="control_cyclotron_1_16" fraction="{1. / 32.}"/>
    </kstraj_trajectory_adiabatic>

